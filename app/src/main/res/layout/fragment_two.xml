<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.danandfranz.filmtosee.TwoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:id="@+id/layoutComments">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:id="@+id/scrollView" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:id="@+id/othersMsg"
                    android:background="@color/iron"
                    android:isScrollContainer="false">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chatAvatar"
                        android:layout_weight="2"
                        android:src="@mipmap/ic_launcher" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="3dp"
                        android:layout_weight="0.2"
                        android:paddingBottom="3dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"

                            >


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="User"
                                android:id="@+id/chatUsername"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Oh yeahhhhhhhhhhhhhhhhh\nTomorrow!!! :D  :D :D :D :)"
                                android:id="@+id/textView3"
                                android:maxHeight="40dp"
                                android:layout_weight="1" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="ore 15:23"
                        android:id="@+id/chatOre"
                        android:gravity="bottom"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|right" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:background="#e1f7fd"
                    android:isScrollContainer="false"
                    android:layout_below="@+id/othersMsg"
                    android:layout_marginTop="4dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="ore 15:23"
                        android:id="@+id/chatMyOre"
                        android:gravity="bottom"
                        android:textSize="10dp"
                        android:layout_gravity="bottom|left" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"

                        android:layout_weight="0.2">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="User"
                            android:id="@+id/chatMyUsername"
                            android:layout_weight="1"
                            android:layout_gravity="right" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="That&apos;s cool man fsfsfsdfsfsdfdssd \ndadasd"
                            android:id="@+id/textMyView3"
                            android:maxHeight="40dp"
                            android:layout_weight="1"
                            android:gravity="right" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chatMyAvatar"
                        android:layout_weight="2"
                        android:src="@mipmap/ic_launcher" />
                </LinearLayout>

            </RelativeLayout>






        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:layout_alignParentBottom="true"
            android:weightSum="2"
            android:focusable="true"
            android:focusableInTouchMode="true">


            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textInput"
                android:layout_weight="1.5">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:id="@+id/insertText"
                    android:ems="10"
                    android:layout_weight="1"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/sendBtn"
                    android:hint="Comment"
                    android:singleLine="true"
                    android:selectAllOnFocus="true"
                    android:isScrollContainer="true" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sendBtn"

                android:background="@drawable/ic_send_24dp"
                android:layout_gravity="bottom|right"
                android:layout_weight="0.2" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>